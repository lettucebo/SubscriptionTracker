@model IEnumerable<SubscriptionTracker.Models.Subscription>

@{
    ViewData["Title"] = "訂閱報表";
    string currentSort = ViewBag.CurrentSort;
    string daysSortParm = ViewBag.DaysSortParm;
    string nameSortParm = ViewBag.NameSortParm;
    string costSortParm = ViewBag.CostSortParm;
    string dateSortParm = ViewBag.DateSortParm;
    decimal totalMonthlyCost = ViewBag.TotalMonthlyCost;
}

<h1>訂閱服務報表</h1>

<div class="row mt-4">
    <div class="col-md-9">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">訂閱服務一覽</h5>
                    <span class="badge bg-primary rounded-pill">總計: @Model.Count() 個訂閱</span>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>
                                    <a asp-action="Index" asp-route-sortOrder="@nameSortParm" class="text-dark">
                                        @Html.DisplayNameFor(model => model.Name)
                                        @if (currentSort == "nameAsc") {
                                            <i class="bi bi-sort-alpha-down"></i>
                                        } else if (currentSort == "nameDesc") {
                                            <i class="bi bi-sort-alpha-up"></i>
                                        }
                                    </a>
                                </th>
                                <th>
                                    <a asp-action="Index" asp-route-sortOrder="@costSortParm" class="text-dark">
                                        @Html.DisplayNameFor(model => model.Cost)
                                        @if (currentSort == "costAsc") {
                                            <i class="bi bi-sort-numeric-down"></i>
                                        } else if (currentSort == "costDesc") {
                                            <i class="bi bi-sort-numeric-up"></i>
                                        }
                                    </a>
                                </th>
                                <th>
                                    <a asp-action="Index" asp-route-sortOrder="@dateSortParm" class="text-dark">
                                        @Html.DisplayNameFor(model => model.PaymentDate)
                                        @if (currentSort == "dateAsc") {
                                            <i class="bi bi-sort-numeric-down"></i>
                                        } else if (currentSort == "dateDesc") {
                                            <i class="bi bi-sort-numeric-up"></i>
                                        }
                                    </a>
                                </th>
                                <th>
                                    <a asp-action="Index" asp-route-sortOrder="@daysSortParm" class="text-dark">
                                        剩餘天數
                                        @if (currentSort == "daysAsc") {
                                            <i class="bi bi-sort-numeric-down"></i>
                                        } else if (currentSort == "daysDesc") {
                                            <i class="bi bi-sort-numeric-up"></i>
                                        }
                                    </a>
                                </th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model) {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Cost)
                                    </td>
                                    <td>
                                        每月 @item.PaymentDate.Day 日
                                    </td>
                                    <td>
                                        <span class="badge @(item.DaysRemaining <= 5 ? "bg-danger" : item.DaysRemaining <= 10 ? "bg-warning" : "bg-success")">
                                            @item.DaysRemaining 天
                                        </span>
                                    </td>
                                    <td>
                                        <a asp-controller="Subscriptions" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">編輯</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">費用摘要</h5>
            </div>
            <div class="card-body">
                <div class="mb-4">
                    <h6>月費總計</h6>
                    <h2 class="text-primary">@totalMonthlyCost.ToString("c")</h2>
                </div>
                
                <div class="mb-4">
                    <h6>年費總計</h6>
                    <h3>@((totalMonthlyCost * 12).ToString("c"))</h3>
                </div>
                
                <hr>
                
                <div>
                    <h6>即將繳費</h6>
                    <ul class="list-group list-group-flush">
                        @foreach (var item in Model.Where(s => s.DaysRemaining <= 7).OrderBy(s => s.DaysRemaining).Take(3)) {
                            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                <div>
                                    <strong>@item.Name</strong>
                                    <div class="text-muted small">@item.Cost.ToString("c")</div>
                                </div>
                                <span class="badge @(item.DaysRemaining <= 3 ? "bg-danger" : "bg-warning") rounded-pill">
                                    @item.DaysRemaining 天
                                </span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        
        <div class="d-grid gap-2 mt-3">
            <a asp-controller="Home" asp-action="Calendar" class="btn btn-outline-primary">查看日曆</a>
            <a asp-controller="Subscriptions" asp-action="Create" class="btn btn-success">新增訂閱</a>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">返回首頁</a>
</div>