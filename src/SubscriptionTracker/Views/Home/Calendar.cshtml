@{
    ViewData["Title"] = "訂閱日曆";
    int month = ViewBag.Month;
    int year = ViewBag.Year;
    string monthName = ViewBag.MonthName;
    int firstDayOfMonth = ViewBag.FirstDayOfMonth;
    int daysInMonth = ViewBag.DaysInMonth;
    var subscriptionsByDay = ViewBag.SubscriptionsByDay as Dictionary<int, List<SubscriptionTracker.Models.Subscription>>;
    decimal totalMonthlyCost = ViewBag.TotalMonthlyCost;
    
    // Calculate previous and next month for navigation
    DateTime currentDate = new DateTime(year, month, 1);
    DateTime prevMonth = currentDate.AddMonths(-1);
    DateTime nextMonth = currentDate.AddMonths(1);
}

<div class="container">
    <h2 class="text-center mb-4">@monthName @year 訂閱日曆</h2>

    <div class="row mb-3">
        <div class="col">
            <a asp-controller="Home" asp-action="Calendar" asp-route-month="@prevMonth.Month" asp-route-year="@prevMonth.Year" class="btn btn-outline-primary">&laquo; 上個月</a>
        </div>
        <div class="col text-center">
            <h4>本月總費用: @totalMonthlyCost.ToString("c")</h4>
        </div>
        <div class="col text-end">
            <a asp-controller="Home" asp-action="Calendar" asp-route-month="@nextMonth.Month" asp-route-year="@nextMonth.Year" class="btn btn-outline-primary">下個月 &raquo;</a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row text-center fw-bold mb-2">
                <div class="col">週日</div>
                <div class="col">週一</div>
                <div class="col">週二</div>
                <div class="col">週三</div>
                <div class="col">週四</div>
                <div class="col">週五</div>
                <div class="col">週六</div>
            </div>

            @{
                int dayCounter = 1;
                bool started = false;
                
                // Calculate how many weeks we need to display
                int totalDaysToShow = firstDayOfMonth + daysInMonth;
                int numberOfWeeks = (int)Math.Ceiling(totalDaysToShow / 7.0);
                
                // Loop through each week
                for (int week = 0; week < numberOfWeeks; week++) {
                    <div class="row mb-3">
                        @for (int day = 0; day < 7; day++) {
                            <div class="col p-0 border" style="min-height: 120px;">
                                @if ((week == 0 && day >= firstDayOfMonth) || (week > 0 && dayCounter <= daysInMonth)) {
                                    <div class="p-2">
                                        <div class="d-flex justify-content-between">
                                            <span class="fw-bold">@dayCounter</span>
                                            
                                            @if (subscriptionsByDay.ContainsKey(dayCounter)) {
                                                <a href="#" data-bs-toggle="modal" data-bs-target="#dayModal-@dayCounter" class="badge bg-primary">
                                                    @subscriptionsByDay[dayCounter].Count 筆訂閱
                                                </a>
                                            }
                                        </div>
                                        
                                        @if (subscriptionsByDay.ContainsKey(dayCounter)) {
                                            <div class="mt-1 small">
                                                @foreach (var sub in subscriptionsByDay[dayCounter].Take(2)) {
                                                    <div class="text-truncate text-nowrap" style="max-width: 100%;">
                                                        <i class="bi bi-calendar-check"></i> @sub.Name: @sub.Cost.ToString("c")
                                                    </div>
                                                }
                                                @if (subscriptionsByDay[dayCounter].Count > 2) {
                                                    <div class="text-muted">...更多</div>
                                                }
                                            </div>
                                        }
                                    </div>
                                    
                                    dayCounter++;
                                }
                            </div>
                        }
                    </div>
                }
            }
        </div>
    </div>
    
    <div class="mt-3">
        <a asp-controller="Subscriptions" asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> 新增訂閱
        </a>
    </div>
</div>

@* Create modals for each day with subscriptions *@
@foreach (var dayEntry in subscriptionsByDay) {
    int day = dayEntry.Key;
    var subscriptions = dayEntry.Value;
    
    <div class="modal fade" id="dayModal-@day" tabindex="-1" aria-labelledby="dayModalLabel-@day" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="dayModalLabel-@day">@monthName @day, @year 訂閱</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="list-group">
                        @foreach (var sub in subscriptions) {
                            <div class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1">@sub.Name</h5>
                                    <span class="badge bg-primary rounded-pill">@sub.Cost.ToString("c")</span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <small>繳費日期: @sub.PaymentDate.ToString("yyyy-MM-dd")</small>
                                    <div>
                                        <a asp-controller="Subscriptions" asp-action="Edit" asp-route-id="@sub.Id" class="btn btn-sm btn-outline-primary">編輯</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">關閉</button>
                </div>
            </div>
        </div>
    </div>
}