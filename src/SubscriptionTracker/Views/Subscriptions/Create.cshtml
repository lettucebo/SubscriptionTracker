@model SubscriptionTracker.Models.Subscription

@{
    ViewData["Title"] = "新增訂閱";
}

<h1>新增訂閱服務</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">填寫訂閱服務資料</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Cost" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="Cost" class="form-control" />
                        </div>
                        <span asp-validation-for="Cost" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="PaymentDate" class="form-label"></label>
                        <input asp-for="PaymentDate" type="date" class="form-control" />
                        <span asp-validation-for="PaymentDate" class="text-danger"></span>
                        <small class="text-muted">每月繳費的日期</small>
                    </div>
                    
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">返回列表</a>
                        <button type="submit" class="btn btn-primary">新增</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">填寫說明</h5>
            </div>
            <div class="card-body">
                <p><strong>服務名稱:</strong> 輸入訂閱服務的名稱，如Netflix、Spotify等。</p>
                <p><strong>月費:</strong> 輸入每月所需支付的訂閱費用。</p>
                <p><strong>繳費日期:</strong> 選擇每月的繳費日期，系統會自動計算距離下次繳費的剩餘天數。</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}