@model SubscriptionTracker.Models.Subscription

@{
    ViewData["Title"] = "編輯訂閱";
}

<h1>編輯訂閱服務</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">編輯訂閱服務資料</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Cost" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="Cost" class="form-control" />
                        </div>
                        <span asp-validation-for="Cost" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="PaymentDate" class="form-label"></label>
                        <input asp-for="PaymentDate" type="date" class="form-control" />
                        <span asp-validation-for="PaymentDate" class="text-danger"></span>
                        <small class="text-muted">每月繳費的日期</small>
                    </div>
                    
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">返回列表</a>
                        <button type="submit" class="btn btn-primary">儲存</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">繳費時程預覽</h5>
            </div>
            <div class="card-body">
                <h6>目前訂閱資訊</h6>
                <table class="table table-sm">
                    <tr>
                        <th>訂閱名稱:</th>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <th>月費:</th>
                        <td>@Model.Cost.ToString("c")</td>
                    </tr>
                    <tr>
                        <th>繳費日期:</th>
                        <td>每月 @Model.PaymentDate.Day 號</td>
                    </tr>
                    <tr>
                        <th>距離下次繳費:</th>
                        <td>
                            <span class="badge @(Model.DaysRemaining <= 5 ? "bg-danger" : Model.DaysRemaining <= 10 ? "bg-warning" : "bg-success")">
                                @Model.DaysRemaining 天
                            </span>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}