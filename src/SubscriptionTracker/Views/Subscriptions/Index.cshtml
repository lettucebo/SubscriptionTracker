@model IEnumerable<SubscriptionTracker.Models.Subscription>

@{
    ViewData["Title"] = "訂閱服務";
}

<h1>訂閱服務管理</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">新增訂閱服務</a>
</p>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">所有訂閱服務</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Cost)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PaymentDate)
                        </th>
                        <th>
                            剩餘天數
                        </th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cost)
                            </td>
                            <td>
                                @item.PaymentDate.ToString("yyyy-MM-dd")
                            </td>
                            <td>
                                <span class="badge @(item.DaysRemaining <= 5 ? "bg-danger" : item.DaysRemaining <= 10 ? "bg-warning" : "bg-success")">
                                    @item.DaysRemaining 天
                                </span>
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">編輯</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">詳情</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">刪除</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">返回首頁</a>
    <a asp-controller="Report" asp-action="Index" class="btn btn-info">查看報表</a>
</div>